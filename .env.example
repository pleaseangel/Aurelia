# Aurelia Prayer App - Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=250
OPENAI_TEMPERATURE=0.8

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abcdef123456789

# Netlify Configuration
NETLIFY_SITE_ID=your_netlify_site_id
NETLIFY_AUTH_TOKEN=your_netlify_auth_token

# App Configuration
APP_NAME=Aurelia
APP_VERSION=1.0.0
APP_URL=https://your-domain.netlify.app
APP_SUPPORT_EMAIL=support@yourapp.com

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token

# Security Settings
CORS_ORIGIN=https://your-domain.netlify.app
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Development Settings
NODE_ENV=production
DEBUG_MODE=false
LOG_LEVEL=info

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_PRAYER_HISTORY=true
ENABLE_PRAYER_SHARING=true
ENABLE_VOICE_RECOGNITION=true
ENABLE_TEXT_TO_SPEECH=true

# Database Settings
MAX_PRAYERS_PER_USER=1000
PRAYER_RETENTION_DAYS=365
CACHE_TTL=3600

# Third-party Integrations (Optional)
SENTRY_DSN=your_sentry_dsn_for_error_tracking
POSTHOG_API_KEY=your_posthog_key_for_analytics
